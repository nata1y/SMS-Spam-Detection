groups:
- name: Drift Detection
  rules:

  # Alert for any instance that is unreachable for >2 minutes.
  - alert: drift_detected_nlp_results
    expr: driftdetection_nlp_results > 0.5 #threshold = 0.5
    for: 1s
    labels:
      severity: page
    annotations:
      summary: "[Drift Detected] NLP model detected drift!"
      description: "[Drift Detected] NLP model detected drift!"

  - alert: drift_detected_loss_results
    expr: driftdetection_loss_results > 0.5 #threshold = 0.5
    for: 1s
    labels:
      severity: page
    annotations:
      summary: "[Drift Detected] Loss model detected drift!"
      description: "[Drift Detected] Loss model detected drift!"

  - alert: driftdetection_regression_results
    expr: driftdetection_regression_results > 0.5 #threshold = 0.5
    for: 1s
    labels:
      severity: page
    annotations:
      summary: "[Drift Detected] Regression model detected drift!"
      description: "[Drift Detected] Regression model detected drift!"

  - alert: driftdetection_test_metric
    expr: driftdetection_test_metric > 6 #threshold = 6
    for: 1s
    labels:
      severity: page
    annotations:
      summary: "[Drift Detected] random detected drift!"
      description: "[Drift Detected] random detected drift!"